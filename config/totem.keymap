#define BASE 0
#define NAV  1
#define SYM  2
#define ADJ  3
#define TVP1 4
#define TVP2 5

&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

/ {
    combos {
        compatible = "zmk,combos";

        right_ctrl {
            bindings = <&kp RIGHT_CONTROL>;
            key-positions = <19 20>;
        };

        right_gui {
            bindings = <&kp RIGHT_GUI>;
            key-positions = <20 21>;
        };

        right_alt {
            bindings = <&kp RIGHT_ALT>;
            key-positions = <21 22>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <19 21>;
        };

        left_control {
            bindings = <&kp LEFT_CONTROL>;
            key-positions = <16 15>;
        };

        left_gui {
            bindings = <&kp LEFT_GUI>;
            key-positions = <15 14>;
        };

        left_alt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <13 14>;
        };

        delete {
            bindings = <&kp DELETE>;
            key-positions = <14 16>;
        };

        sweChar1 {
            bindings = <&kp SQT>;
            key-positions = <26 27>;
        };

        sweChar2 {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <27 28>;
        };

        rightBracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <31 32>;
        };

        minus {
            bindings = <&kp MINUS>;
            key-positions = <32 33>;
        };

        left_bracket {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <26 28>;
        };

        right_parantheses {
            bindings = <&kp LS(RIGHT_PARENTHESIS)>;
            key-positions = <31 33>;
        };

        left_brace {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <15 28>;
        };

        right_brace {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <20 31>;
        };

        equal {
            bindings = <&kp EQUAL>;
            key-positions = <15 26>;
        };

        backslash {
            bindings = <&kp BACKSLASH>;
            key-positions = <20 33>;
        };

        graveTilde {
            bindings = <&kp GRAVE>;
            key-positions = <33 34>;
        };

    };

    macros {
        gif: gif {
            label = "giphy";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp N2>,
                <&macro_release>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp G &kp I &kp F>;
        };
    };

